<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".About">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolb"
        android:background="#EEEEEE"
        app:titleTextAppearance="@font/roboto"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nursing And Midwifery"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto"
        android:layout_below="@id/logo"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="1.0.0"
        android:fontFamily="@font/roboto"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv"/>

    <TextView
        android:id="@+id/dev1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:fontFamily="@font/roboto"
        android:paddingLeft="15dp"
        android:text="Developer"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dev1"
        android:fontFamily="@font/roboto"
        android:paddingLeft="15dp"
        android:textSize="16dp"
        android:text="Prince Software Systems" />

    <TextView
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dv2"
        android:fontFamily="@font/roboto"
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:text="Contacts"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cont"
        android:fontFamily="@font/roboto"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:text="email:princesoftwaresystems@gmail.com" />

    <TextView
        android:id="@+id/cctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cct"
        android:fontFamily="@font/roboto"
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:text="website:princesoftwaresystems.blogspot.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/roboto"
        android:text="A product of Prince Software Systems"
        android:layout_centerInParent="true"/>

</RelativeLayout>